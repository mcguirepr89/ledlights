[Unit]
Description=LED Lights IR Control Web Service
After=network.target

[Service]
User=username
Group=groupname
WorkingDirectory=/home/username/ledlights
Environment="PATH=/home/username/ledlights/venv/bin"
EnvironmentFile=/home/username/ledlights/.env
ExecStart=/home/username/ledlights/venv/bin/gunicorn -b 127.0.0.1:8000 app:app

Restart=always

[Install]
WantedBy=multi-user.target
